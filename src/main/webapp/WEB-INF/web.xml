<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <!-- GuestController Servlet -->
  <servlet>
    <servlet-name>GuestController</servlet-name>
    <servlet-class>com.hotelweb.GuestController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.hotelweb.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RegisterServlet</servlet-name>
    <servlet-class>com.hotelweb.RegisterServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RoomController</servlet-name>
    <servlet-class>com.hotelweb.RoomController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RoomBookingServlet</servlet-name>
    <servlet-class>com.hotelweb.RoomBookingServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ReservationServlet</servlet-name>
    <servlet-class>com.hotelweb.ReservationServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ContactServlet</servlet-name>
    <servlet-class>com.hotelweb.ContactServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CheckoutServlet</servlet-name>
    <servlet-class>com.hotelweb.CheckoutServlet</servlet-class>
  </servlet>


  <servlet-mapping>
    <servlet-name>GuestController</servlet-name>
    <url-pattern>/guestController</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/loginServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RoomController</servlet-name>
    <url-pattern>/room_overview</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RoomBookingServlet</servlet-name>
    <url-pattern>/rooms-category</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ReservationServlet</servlet-name>
    <url-pattern>/booking</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ContactServlet</servlet-name>
    <url-pattern>/Contact</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CheckoutServlet</servlet-name>
    <url-pattern>/Checkout</url-pattern>
  </servlet-mapping>
</web-app>
