<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <!-- GuestController Servlet -->
  <servlet>
    <servlet-name>GuestController</servlet-name>
    <servlet-class>com.hotelweb.GuestController</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.hotelweb.LoginServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>RegisterServlet</servlet-name>
    <servlet-class>com.hotelweb.RegisterServlet</servlet-class>
  </servlet>


  <servlet-mapping>
    <servlet-name>GuestController</servlet-name>
    <url-pattern>/guestController</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/loginServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>RegisterServlet</servlet-name>
    <url-pattern>/createaccount</url-pattern>
  </servlet-mapping>
</web-app>
